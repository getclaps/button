{
  "compilerOptions": {
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
  },
  "include": [
    "typings/**/*.ts",
    "src/**/*.ts",
  ],
}