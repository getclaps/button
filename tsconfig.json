{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "ES2020",
    "target": "ES2015",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "types": []
  },
  "include": [
    "typings/**/*.ts",
    "src/**/*.ts",
  ],
}