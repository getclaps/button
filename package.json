{
  "name": "@getclaps/button",
  "version": "1.0.0-alpha.11",
  "description": "",
  "type": "module",
  "main": "dist/index.js",
  "module": "lib/index.js",
  "files": [
    "lib",
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf lib dist",
    "test": "exit 0",
    "build:tsc": "tsc -d --outDir lib",
    "watch:tsc": "tsc -d --outDir lib -w",
    "build:rollup": "rollup -c",
    "watch:rollup": "rollup -c -w",
    "build": "npm run build:tsc & npm run build:rollup & wait",
    "watch": "npm run watch:tsc & npm run watch:rollup",
    "dev": "npm run watch & http-server -p 3337",
    "changelog:head": "echo \"\\n\\n## v$npm_package_version\" | bin/after.js 'CHANGELOG' CHANGELOG.md",
    "changelog:list": "git log v$npm_package_version..HEAD --pretty=format:'- %s' --reverse | bin/after.js 'CHANGELOG' CHANGELOG.md",
    "preversion": "npm run changelog:list",
    "version": "npm run changelog:head && git add .",
    "prepack": "npm run clean && npm run build"
  },
  "author": "Florian Klampfer <mail@qwtel.com> (https://qwtel.com/)",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "rollup": "^2.28.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@getclaps/proof-of-clap": "^0.2.0",
    "@werker/json-fetch": "^1.0.0",
    "broadcastchannel-polyfill": "^1.0.1",
    "kv-storage-polyfill": "^2.0.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "uuid-class": "^0.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getclaps/button.git"
  },
  "bugs": {
    "url": "https://github.com/getclaps/button/issues"
  },
  "homepage": "https://getclaps.net/",
  "tags": []
}
